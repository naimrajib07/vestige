<% title(@guild.name, "Guilds") %>

<h1><%= @guild.name %></h1>
<h2><%= @guild.game %></h2>
<p><%= @guild.server %></p>
<p><%= @guild.affiliation %></p>
<%= link_to "Edit Guild", edit_guild_path(@guild) %>
<% admins_only do %>
<%= link_to "Delete Guild",
  admin_guild_path(@guild),
  method: :delete,
  data: { confirm: "Are you sure you want to delete this guild?" }
%>
<% end %>
